<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/startupFragment">

    <fragment
        android:id="@+id/startupFragment"
        android:name="com.example.sneakerstepping.ui.StartupFragment"
        android:label="startup_fragment"
        tools:layout="@layout/startup_fragment" >
        <action
            android:id="@+id/action_startupFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_startupFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.sneakerstepping.ui.RegisterFragment"
        android:label="register_fragment"
        tools:layout="@layout/register_fragment" >
        <action
            android:id="@+id/action_registerFragment_to_startupFragment"
            app:destination="@id/startupFragment" />
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.sneakerstepping.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_startupFragment"
            app:destination="@id/startupFragment" />
        <action
            android:id="@+id/action_homeFragment_to_addShoeFragment"
            app:destination="@id/addShoeFragment" />
    </fragment>
    <fragment
        android:id="@+id/addShoeFragment"
        android:name="com.example.sneakerstepping.ui.AddShoeFragment"
        android:label="fragment_add_shoe"
        tools:layout="@layout/fragment_add_shoe" >
        <action
            android:id="@+id/action_addShoeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>